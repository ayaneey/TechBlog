<div class="row">
	<div class="col-md-6">
		<h2>Login</h2>

		<form class="form login-form">
			<div class="form-group">
				<label for="username-login">username:</label>
				<input class="form-input" type="text" id="username-login" />
			</div>
			<div class="form-group">
				<label for="email-login">email:</label>
				<input class="form-input" type="text" id="email-login" />
			</div>
			<div class="form-group">
				<label for="password-login">password:</label>
				<input class="form-input" type="password" id="password-login" />
			</div>
			<br />
			<div class="form-group">
				<button
					class="btn btn-primary"
					id="login-btn"
					type="submit"
				>login</button>
			</div>
		</form>
	</div>
	<br />
	<p><b>If you don't have an account yet, please sign up.</b></p>
	<br />
	<button
		onclick="location.href='http://localhost:3001/signup'"
		type="button"
		id="signup-btn"
	>
		Signup</button>

</div>

<script src="./js/login.js"></script>